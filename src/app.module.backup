import { Module } from '@nestjs/common';
import { AppController } from './app.controller';
import { LibraryModule } from './library/library.module';
import { ConfigModule } from '@nestjs/config';
import { PSConfigModule, PSConfigService } from 'nestjs-param-store';
import { CognitoAuthModule } from '@nestjs-cognito/auth';
import { validate } from './config/env.validation';
import { ThrottlerModule, ThrottlerGuard } from '@nestjs/throttler';
import { APP_GUARD } from '@nestjs/core';

@Module({
  imports: [
    ConfigModule.forRoot({
      isGlobal: true,
      validate,
    }),
    ThrottlerModule.forRoot([{
      ttl: 60000, // 1 minute
      limit: 100, // 100 requests per minute
    }]),
    LibraryModule,
    PSConfigModule.register({
      ssmParamStorePath: '/demo/libraryservice',
      ssmDecryptParams: true,
      ssmRecursive: false,
      ssmClientOptions: {
        region: 'us-east-2',
      },
    }),
    CognitoAuthModule.registerAsync({
      imports: [ConfigModule],
      useFactory: async (psConfigService: PSConfigService) => ({
        jwtVerifier: {
          userPoolId: psConfigService.get<string>('/cognito/userpoolid'),
          clientId: psConfigService.get<string>('/cognito/clientid'),
          tokenUse: "id",
        },
      }),
      inject: [PSConfigService],
    }),
  ],
  controllers: [AppController],
  providers: [
    {
      provide: APP_GUARD,
      useClass: ThrottlerGuard,
    },
  ],
})
export class AppModule {}
